{
  "name": "Bodhi",
  "description": "Bodhi Prediction Market app",
  "author": "bodhi.network",
  "license": "ISC",
  "version": "0.8.1-c0-d3",
  "repository": "git@github.com:bodhiproject/bodhi-graphql.git",
  "main": "main.js",
  "keywords": [
    "qtum",
    "bodhi",
    "api",
    "graphql"
  ],
  "scripts": {
    "install-dep": "script/install.sh",
    "start": "script/start.sh",
    "start:devtools": "script/start-devtools.sh",
    "start:noui": "script/start-noui.sh",
    "build:mac": "script/mac.sh",
    "build:win": "script/win.sh",
    "build:lin": "script/lin.sh",
    "build:mac-tn": "script/mac-testnet.sh",
    "build:win-tn": "script/win-testnet.sh",
    "build:lin-tn": "script/lin-testnet.sh",
    "lint:fix": "eslint --fix -- src/."
  },
  "build": {
    "appId": "network.bodhi.app",
    "productName": "Bodhi",
    "mac": {
      "asar": true,
      "asarUnpack": "server/qtum/mac/bin/*",
      "category": "public.app-category.utilities",
      "files": [
        {
          "filter": [
            "**/*",
            "build/icon.png",
            "!server/qtum/linux32",
            "!server/qtum/linux64",
            "!server/qtum/win32",
            "!server/qtum/win64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "target": "dmg"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "win": {
      "artifactName": "Bodhi-Setup-${version}.${ext}",
      "asar": true,
      "asarUnpack": [
        "server/qtum/win64/bin/*",
        "server/qtum/win32/bin/*"
      ],
      "files": [
        {
          "filter": [
            "**/*",
            "build/icon.ico",
            "!server/qtum/linux32",
            "!server/qtum/linux64",
            "!server/qtum/mac"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "asar": true,
      "asarUnpack": [
        "server/qtum/linux64/bin/*",
        "server/qtum/linux32/bin/*"
      ],
      "category": "Utility",
      "files": [
        {
          "filter": [
            "**/*",
            "build/icon.png",
            "!server/qtum/mac",
            "!server/qtum/win32",
            "!server/qtum/win64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "electron-prompt": "^0.5.0",
    "express": "^4.16.3",
    "mixpanel": "^0.9.2",
    "restify": "^6.4.0"
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.0.5",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "yarn": "^1.7.0"
  }
}
