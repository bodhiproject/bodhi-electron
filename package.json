{
  "name": "BodhiPM",
  "description": "Bodhi Prediction Market app",
  "author": "bodhi.network",
  "license": "ISC",
  "version": "0.3.0",
  "repository": "git@github.com:bodhiproject/bodhi-graphql.git",
  "main": "main.js",
  "keywords": [
    "qtum",
    "bodhi",
    "api",
    "graphql"
  ],
  "scripts": {
    "insall": "npm install && ./node_modules/.bin/yarn install",
    "start": "./node_modules/.bin/electron . --qtumpath=./qtum/mac/bin --dev",
    "test": "mocha --recursive src/test/.",
    "lint:fix": "eslint --fix -- src/.",
    "build:mac": "./node_modules/.bin/electron-builder build -m",
    "build:win": "./node_modules/.bin/electron-builder build -w",
    "build:lin": "./node_modules/.bin/electron-builder build -l"
  },
  "build": {
    "appId": "network.bodhi.app",
    "productName": "BodhiPM",
    "mac": {
      "asar": true,
      "asarUnpack": "qtum/mac/bin/*",
      "files": [
        {
          "filter": [
            "**/*",
            "!assets",
            "!qtum/linux32",
            "!qtum/linux64",
            "!qtum/win32",
            "!qtum/win64"
          ]
        }
      ],
      "icon": "./assets/logo/Mac_512.png",
      "target": "dmg"
    },
    "win": {
      "asar": true,
      "asarUnpack": [
        "qtum/win64/bin/*",
        "qtum/win32/bin/*"
      ],
      "files": [
        {
          "filter": [
            "**/*",
            "!assets",
            "!qtum/linux32",
            "!qtum/linux64",
            "!qtum/mac"
          ]
        }
      ],
      "icon": "./assets/logo/Mac_512.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "asar": true,
      "asarUnpack": [
        "qtum/linux64/bin/*",
        "qtum/linux32/bin/*"
      ],
      "files": [
        {
          "filter": [
            "**/*",
            "!assets",
            "!qtum/mac",
            "!qtum/win32",
            "!qtum/win64"
          ]
        }
      ],
      "icon": "./assets/logo/Mac_512.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "apollo-server-restify": "^1.3.2",
    "babel-polyfill": "^6.26.0",
    "bluebird": "^3.5.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "dataloader": "^1.3.0",
    "dotenv": "^5.0.0",
    "fs-extra": "^5.0.0",
    "graphql": "^0.11.7",
    "graphql-subscriptions": "^0.5.5",
    "graphql-tools": "^2.10.0",
    "i": "^0.3.6",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "nedb": "^1.8.0",
    "nedb-promise": "^2.0.1",
    "node-fetch": "^1.7.3",
    "pg": "^7.4.0",
    "qweb3": "^0.6.0",
    "restify": "^6.3.4",
    "restify-cors-middleware": "^1.1.0",
    "restify-router": "^0.5.0",
    "subscriptions-transport-ws": "^0.9.1",
    "web3-utils": "^1.0.0-beta.26",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^20.0.5",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "mocha": "^4.1.0",
    "yarn": "^1.3.2"
  },
  "authors": [
    {
      "name": "Frank Hu",
      "email": "frank@bodhi.network",
      "url": "https://www.bodhi.network/"
    },
    {
      "name": "Deric Walintukan",
      "email": "deric@bodhi.network",
      "url": "https://www.bodhi.network/"
    },
    {
      "name": "Chris Li",
      "email": "chris@bodhi.network",
      "url": "https://www.bodhi.network/"
    }
  ]
}
